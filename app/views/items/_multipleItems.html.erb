<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Subject</th>
      <th>Description</th>
      <th>Price</th>
      <th>Isbn</th>
      <th>Level</th>
      <th>Image url</th>
      <th>Category</th>
      <th>Colour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.author %></td>
        <td><%= item.subject %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.isbn %></td>
        <td><%= item.level %></td>
        <td><%= image_tag(item.image_url, :height => '200') %></td>
        <td><%= item.category %></td>
        <td><%= item.colour %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>